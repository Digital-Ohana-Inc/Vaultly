generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id String @id @default(cuid())
  name String
  address String
  contactInfo String
  logo String?
  hours String?
  location String?
  policies String?
  planId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  deletedAt DateTime?

  // Relations
  users User[]
}

model User {
  id String @id @default(uuid())
  shop_id String?
  name String
  email String @unique
  password String
  role Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  deletedAt DateTime?

  // Relations
  shop Shop? @relation(fields: [shop_id], references: [id])
}

enum Role {
  USER
  ADMIN
}